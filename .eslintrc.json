{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    // to override any rules from airbnb styleguide, add here
    "linebreak-style": ["error", "unix"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-unused-vars": ["error", { "args": "none" }]
    // reference https://eslint.org/docs/rules/
  }
}
